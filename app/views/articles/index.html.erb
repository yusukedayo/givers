<div class="container pt-3">
  <%= render 'topics_navar' %>

  <!-- 掲示板一覧 -->
  <div class="d-flex align-items-end" >
    <div class="w-25 "><h4 class="fw-bolder">全て</h4></div>
    <div class="ms-auto align-items-end">
     <h6 class="mb-0"><%= link_to 'もっと見る', topics_path, class: 'nav-link' %></h6>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @articles.present? %>
          <%= render @articles %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex align-items-end border-top border-dark border-2 mt-2 pt-3" >
    <div class="w-25 "><h4 class="fw-bolder">入門ステップ</h4></div>
    <div class="ms-auto align-items-end">
     <h6 class="mb-0"><%= link_to 'もっと見る', introduction_topics_path, class: 'nav-link' %></h6>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @introduction_articles.present? %>
          <%= render @introduction_articles %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex align-items-end border-top border-dark border-2 mt-2 pt-3" >
    <div class="w-25 "><h4 class="fw-bolder">基礎ステップ</h4></div>
    <div class="ms-auto align-items-end">
     <h6 class="mb-0"><%= link_to 'もっと見る', basis_topics_path, class: 'nav-link' %></h6>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @basis_articles.present? %>
          <%= render @basis_articles %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex align-items-end border-top border-dark border-2 mt-2 pt-3" >
    <div class="w-25 "><h4 class="fw-bolder">応用ステップ</h4></div>
    <div class="ms-auto align-items-end">
     <h6 class="mb-0"><%= link_to 'もっと見る', advance_topics_path, class: 'nav-link' %></h6>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @advance_articles.present? %>
          <%= render @advance_articles %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
