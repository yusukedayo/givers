<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
        <div class="input-group mb-3">
          <%= search_form_for @q, url: articles_path do |f| %>
            <div class="input-group mb-3">
              <%= f.search_field :title_or_body_cont, class: 'form-control' %>
              <div class="input-group-append">
                <%= f.submit class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @like_articles.present? %>
          <%= render @like_articles %>
        <% else %>
          <p>投稿はありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>