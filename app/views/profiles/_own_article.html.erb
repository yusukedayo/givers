<div class="col-sm-12 col-lg-4 mb-3">
  <div id="article-id-<%= own_article.id %>">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <%= render 'articles/crud_menus', article: own_article %>
          <%= link_to own_article.title, article_path(own_article) %>
        </h4>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= own_article.created_at %>
          </li>
          <li class="list-inline-item">
            <%= render 'articles/tag_list', tag_list: own_article.tag_list %>
          </li>
        </ul>
        <p class="card-text"><%= own_article.body %></p>
      </div>
    </div>
  </div>
</div>